<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.persistence.mybatisimpl.mappers.OfferMapper">

    <resultMap type="Offer" id="OfferResult">
        <id property="id" column="id"/>
        <result property="category" column="category"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="creationDate" column="creationdate"/>
        <result property="status" column="status"/>
        <result property="modificationDate" column="modificationdate"/>
    </resultMap>

    <!-- adicionar oferta -->
    <insert parameterType="map" id="addOffer">
        INSERT INTO offer (category,name,description,creationdate,status,modificationdate)
        VALUES (#{offer.category},#{offer.name},#{offer.description},CURRENT_TIMESTAMP,#{offer.status},CURRENT_TIMESTAMP)
    </insert>

</mapper>