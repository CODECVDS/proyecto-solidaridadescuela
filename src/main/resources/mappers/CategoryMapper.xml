<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.persistence.mybatisimpl.mappers.CategoryMapper">

    <resultMap type='Category' id='CategoryResult'>
        <id property='id' column='id' />
        <result property='name' column='name' />
        <result property='description' column='description' />
        <result property='creationDate' column='creationDate' />
        <result property='status' column='status' />
        <result property='modificationDate' column='modificationDate' />
    </resultMap>

    <!--loadCategory-->
    <select parameterType="map" id="loadC" resultMap="CategoryResult">
        SELECT
            c.id ,
            c.name ,
            c.description,
            c.creationDate,
            c.status,
            c.modificationDate
        FROM category c
        WHERE c.id = #{id}
    </select>
    
    <!--addCategory-->
    <insert parameterType="map" id="addCategory">
        INSERT INTO category (id,name,description,creationdate,status,modificationdate)
        VALUES (#{id}, #{name},#{description},#{creationDate},true,#{modificationDate})
    </insert>

    <!--updateCategory-->
    <update parameterType="map" id="modifyCategory">
        UPDATE category
        SET
        name = #{category.name},
        description = #{category.description},
        status = #{category.status}
        modificationDate = CURRENT_DATE;
        WHERE id = #{category.id}
    </update>

</mapper>